  body#page-top.index
    // Navigation
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header.page-scroll
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.page-scroll(href='#page-top') Project Name
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.hidden
              a(href='#page-top')
            li
              a.page-scroll(href='#about') About
            li
              a.page-scroll(href='#features') Features
            li
              a.page-scroll(href='#team') Team
            li.dropdown
              a(href='#', data-toggle='modal', data-target='#loginModal')
                i.fa.fa-user
                |  LOG IN
        // /.navbar-collapse
      // /.container-fluid
    // Header
    header
      .container
        .intro-text
          .intro-heading Project Name
          .intro-lead-in Your solution to easy roommate living.
          h3
            | Created at 
            a(href='http://www.calhacks.io') Cal Hacks 2014!
          a.page-scroll.btn.btn-xl(href='#features') Learn More
          h3
            a(href='#', data-toggle='modal', data-target='#loginModal') Log in 
            |  or 
            a(href='#', data-toggle='modal', data-target='#registerModal') sign up 
    // Login modal
    #loginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='loginModal', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') X
            h4#myModalLabel.modal-title Log In
          .panel-body
            form(role='form', action='index.js')
              fieldset
                .form-group
                  input.form-control(placeholder='Username', name='username', type='email', autofocus='')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                .checkbox
                  label
                    input(name='remember', type='checkbox', value='Remember Me')
                    | Remember Me
                  span(style='float:right')
                    | No account? Register 
                    a(href='#', data-toggle='modal', data-target='#registerModal') here
                    | .
                // Change this to a button or input when using this as a form
                a.btn.btn-login.btn-block(type='submit') Login
    // Register modal
    #registerModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='registerModal', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-hidden='true') X
            h4#myModalLabel.modal-title Register Account
          .panel-body
            form(role='form')
              fieldset
                .form-group
                  input(type='text', name='username', class='form-control', placeholder='Username',required, autofocus)
                .form-group
                  input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
                .form-group
                  input(type='email', name='email', class='form-control', placeholder='Email',required)
                .form-group
                  input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
                .form-group
                  input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
                // Change this to a button or input when using this as a form
                a.btn.btn-login.btn-block(type='submit') Register
    // About Section
    section#about
      .container
        .row
          .col-lg-12.text-center
            h2.section-heading About
            h3.section-subheading.text-muted Project Name is implemented with node.js, MongoDB, and Bootstrap.
        .row
          img.col-lg-4(src='img/nodejs.jpg', style='height:90px')
          img.col-lg-4(src='img/mongodb.jpg', style='height:90px')
          img.col-lg-4(src='img/bootstrap.jpg', style='height:90px')
    // Features Section
    section#features.bg-light-gray
