extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Lists
					div.bill-wall
						form(class='form-list', action='/list', method='POST')
							input(type='text', name='username', class='form-control', placeholder='author',required, autofocus)
							input(type='text', name='content', class='form-control', placeholder='item',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Post
							span.clearfix