extends layout

block content
.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      h1.text-center.login-title
        | Bill Payments
        .bill-wall
          form.form-bill(action='/bill', method='POST')
            input.form-control(type='text', name='username', placeholder='Pay to', required='', autofocus='')
            input.form-control(type='text', name='name', placeholder='What for', required='')
            input.form-control(type='text', name='amount', placeholder='Amount', required='')
            input.form-control(type='text', name='type', placeholder='Type', required='')
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Post
            span.clearfix
