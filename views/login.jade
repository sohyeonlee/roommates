doctype html
html
  head
    title
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', rel='stylesheet')
  body
    .container
      .row
        .col-sm-6.col-md-4.col-md-offset-4
          h1.text-center.login-title
            | Sign in to our Passport
            | app
          .account-wall
            h1.text-center.login-title
          form.form-signin(action='/login', method='post')
            input.form-control(autofocus='', name='username', placeholder='Email', required='', type='text')
            input.form-control(name='password', placeholder='Password', required='', type='password')
            button.btn.btn-lg.btn-primary.btn-block(type='submit')
              | Sign
              | in
            span.clearfix
        a.text-center.new-account(href='/signup')
          | Create an
          | account
        #message
        h1.text-center.error-message
